<%- include('parts/header') %>

<% var error %>

<section class="vh-100 d-flex flex-column justify-content-center align-items-center registration">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-4 col-12">
                <div class="card text-center p-4">
                    <h1>Marva.com</h1>
                    <form class="mt-4" method="POST">
                        <% if(error) {%>
                        <div class="alert alert-danger">
                            <%= error %>
                        </div>
                        <% } %>
                        <input type="text" name="login" class="form-control my-3 bg-light" value="+998" placeholder="Phone number">
                        <input type="password" name="password" class="form-control my-3 bg-light"
                            placeholder="Password">
                        <button type="submit" class="btn btn-primary w-100">
                            Login
                        </button>
                    </form>
                </div>
                <div class="row justify-content-center mt-4">
                    <div class="col-12">
                        <div class="card d-flex text-center p-4 align-items-center">
                            <p class="m-0 p-0">Don't have an account? <a href="/signup">Sign up</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
